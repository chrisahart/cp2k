&GLOBAL
   PROJECT              au-h2-au-1x1x1-1V-forces
   RUN_TYPE             energy_force
   PRINT_LEVEL          low
   EXTENDED_FFT_LENGTHS .true.
&END GLOBAL

&MOTION
   &CONSTRAINT
      &FIXED_ATOMS
         LIST 1..58, 65..113
      &END FIXED_ATOMS
   &END CONSTRAINT
&END MOTION

&FORCE_EVAL
   METHOD Quickstep

   &PRINT
      &FORCES
      &END FORCES
   &END PRINT

   &DFT
      BASIS_SET_FILE_NAME BASIS_MOLOPT
      POTENTIAL_FILE_NAME GTH_POTENTIALS
	  
      &QS
         EXTRAPOLATION LINEAR_P
      &END QS

      &SMEAGOL
         PROJECT_NAME au-h2-au-1x1x1-1V
         RUN_TYPE     EMTransport

        # Set number of energy points for integrals.
        # Use (NEnergReal, NenergImCircle, NenergImLine, NPoles) >= (64, 32, 16, 16) for more accurate calculation.
         NEnergReal               16
         NenergImCircle           16
         NenergImLine             16
         NPoles                   16

        # Set applied bias
         VBias [eV]               1.0

        # General variables
         Delta                    1e-4
         EnergLowestBound [eV]   -100.0

        # Print transmission coefficient
#        TrCoefficients           T
#        InitTransmRange [eV]    -10.0
#        FinalTransmRange [eV]    10.0
#        NTransmPoints            200
#        TRC.EMDOS                T
#        TRC.LeadsDOS             T

        # Matching of Hartree potential with the leads
         HartreeLeadsBottom [eV]  -1.0883885253E+001

        # Other variables
         # Number of MPI sub-groups to parallelize over k-points
#        EM.ParallelOverKNum 2

      &END SMEAGOL

      &MGRID
         CUTOFF 300
      &END MGRID

      &SCF
         MAX_SCF   1
         IGNORE_CONVERGENCE_FAILURE .true.
         EPS_SCF   1e-6

         # it is advised to converge wave-function for the extended molecule first
         # and then start the trasport calculation using this converged wave-function
         SCF_GUESS atomic
         ADDED_MOS 100

         &SMEAR
            ELECTRONIC_TEMPERATURE [K] 300
            METHOD fermi_dirac
         &END SMEAR

         &MIXING
            ALPHA   0.3
            METHOD  broyden_mixing
            NBUFFER 8
         &END MIXING

         &PRINT
            &RESTART off
            &END RESTART
         &END PRINT
      &END SCF

      &POISSON
         PERIODIC xyz
      &END POISSON

      &XC
         &XC_FUNCTIONAL PBE
         &END XC_FUNCTIONAL
      &END XC
	  
      &KPOINTS
         SCHEME  MONKHORST-PACK  1 1 1
         SYMMETRY OFF
         EPS_GEO 1.e-8
         FULL_GRID ON
         VERBOSE T
         PARALLEL_GROUP_SIZE  0
      &END KPOINTS
   &END DFT


   &SUBSYS
      &CELL
        ABC      8.8671200  8.8671200 38.72
        PERIODIC xyz
      &END CELL

      &TOPOLOGY
        COORD_FILE_NAME em.xyz
        COORD_FILE_FORMAT  XYZ
      &END TOPOLOGY

      &KIND Au
         BASIS_SET SZV-MOLOPT-SR-GTH
         POTENTIAL GTH-PBE-q11
      &END KIND

      &KIND H
        BASIS_SET DZVP-MOLOPT-SR-GTH
        ELEMENT H
        POTENTIAL GTH-PBE-q1
      &END KIND
   &END SUBSYS
&END FORCE_EVAL
